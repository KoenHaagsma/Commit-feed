query MyQuery {
  organization(login: "cmda-minor-web") {
    name
    repositories(last: 1) {
      edges {
        node {
          name
          forks(first: 100) {
            edges {
              node {
                owner {
                  login
                }
                defaultBranchRef {
                  repository {
                    name
                  }
                  target {
                    ... on Commit {
                      history(first: 100) {
                        edges {
                          node {
                            author {
                              name
                              user {
                                avatarUrl
                                bioHTML
                                repositories(last: 10) {
                                  edges {
                                    node {
                                      name
                                      description
                                      createdAt
                                      url
                                      updatedAt
                                    }
                                  }
                                }
                              }
                            }
                            message
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}